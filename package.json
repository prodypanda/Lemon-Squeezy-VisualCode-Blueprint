{
  "name": "lemonsqueezy-extension",
  "displayName": "Lemon Squeezy Blueprint for VS Code",
  "description": "A simple extension that makes it easy to use the Lemon Squeezy API in VS Code, sell your VS Code extension.",
  "version": "1.0.0",
  "publisher": "prodypanda",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "textToolsPro.showToolbar",
        "title": "Show Text Tools Pro",
        "icon": "$(tools)"
      },
      {
        "command": "textToolsPro.characterCount",
        "title": "Count Characters"
      },
      {
        "command": "textToolsPro.wordCount",
        "title": "Count Words"
      },
      {
        "command": "textToolsPro.toUpperCase",
        "title": "Convert to Uppercase"
      },
      {
        "command": "textToolsPro.toLowerCase",
        "title": "Convert to Lowercase"
      },
      {
        "command": "textToolsPro.base64Encode",
        "title": "Base64 Encode"
      },
      {
        "command": "textToolsPro.base64Decode",
        "title": "Base64 Decode"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "text-tools-pro",
          "title": "Text Tools Pro",
          "icon": "$(star)"
        }
      ]
    },
    "views": {
      "text-tools-pro": [
        {
          "type": "webview",
          "id": "textToolsProSidebar",
          "name": "Text Tools Pro",
          "icon": "$(star)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "axios": "^1.4.0",
    "uuid": "^9.0.0",
    "dayjs": "^1.11.9"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.5"
  }
}